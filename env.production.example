# Production Environment Variables
# Скопируйте этот файл в .env на сервере и настройте под себя

# Домен (замените на ваш домен или IP)
DOMAIN=justcreatedsite.ru

# Настройки безопасности
NODE_ENV=production

# Настройки nginx
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Настройки SSL
SSL_EMAIL=admin@justcreatedsite.ru

# Настройки приложения
BACKEND_PORT=3500
FRONTEND_PORT=4000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
