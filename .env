# Production Environment Variables для justcreatedsite.ru
# Скопируйте этот файл в .env на сервере

# Домен
DOMAIN=justcreatedsite.ru

# Настройки безопасности
NODE_ENV=production

# Настройки nginx
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Настройки SSL
SSL_EMAIL=admin@justcreatedsite.ru

# Настройки приложения
BACKEND_PORT=3500
FRONTEND_PORT=4000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Настройки для фронтенда (Next.js)
NEXT_PUBLIC_BACKEND_URL=/api

# Настройки для бэкенда (Express.js)
PORT=3500
